<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/purple_mid</item>
    </style>

    <style name="CardStyle" parent="Theme.AppCompat">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardMaxElevation">6dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="contentPadding">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="CardCoverStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/movie_cover_bg</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CardTextStyle" parent="Theme.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">110dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="CardButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/blue_dark</item>
        <item name="android:text">@string/card_button_txt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>


    <style name="AppTheme.topNavIconsTint" parent="ThemeOverlay.AppCompat">
        <item name="navigationIconTint">@color/blue_dark</item>
    </style>

</resources>