<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_topPanel_x_marginT_ScrollV"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray_bg"
        android:padding="@dimen/padding_topPanel">

        <ImageView
            android:id="@+id/topPanel_ic_home"
            android:layout_width="@dimen/img_size_in_topPanel"
            android:layout_height="@dimen/img_size_in_topPanel"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_home_24"
            android:scaleType="centerCrop"
            android:contentDescription="@string/ic_home"/>

        <TextView
            android:id="@+id/top_profile_link"
            android:text="@string/topPanel_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_bigBold"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/height_topPanel_x_marginT_ScrollV"
        android:layout_marginBottom="@dimen/height_bottomPanel_x_marginB_ScrollV"
        android:background="@color/gray_bg"
        android:scrollbarSize="@dimen/padding_scrollContent">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_scrollContent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                app:cardBackgroundColor="@color/gray_card"
                app:cardCornerRadius="@dimen/card_corner_r"
                android:layout_marginBottom="@dimen/margin_bottom_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_card">

                    <ImageView
                        android:layout_width="@dimen/img_size_in_card"
                        android:layout_height="@dimen/img_size_in_card"
                        android:src="@drawable/bbad"
                        android:background="@drawable/gradient_bg"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/movie_cover"/>

                    <TextView
                        android:id="@+id/card_movie1desc"
                        android:text="@string/movieName_BBad"
                        android:ellipsize="end"
                        android:layout_width="@dimen/width_movieName_in_card"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_bigBold"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/padding_movieName_card"
                        android:paddingEnd="@dimen/padding_card"
                        android:maxLines="3"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/card_movie1_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rectangle"
                        android:text="@string/card_button_txt"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                app:cardBackgroundColor="@color/gray_card"
                app:cardCornerRadius="@dimen/card_corner_r"
                android:layout_marginBottom="@dimen/margin_bottom_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_card">

                <ImageView
                    android:layout_width="@dimen/img_size_in_card"
                    android:layout_height="@dimen/img_size_in_card"
                    android:src="@drawable/bbtheory"
                    android:background="@drawable/gradient_bg"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/movie_cover"/>

                <TextView
                    android:id="@+id/card_movie2desc"
                    android:text="@string/movieName_BBTheory"
                    android:ellipsize="end"
                    android:layout_width="@dimen/width_movieName_in_card"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_bigBold"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/padding_movieName_card"
                    android:paddingEnd="@dimen/padding_card"
                    android:maxLines="3"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/card_movie2_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rectangle"
                    android:text="@string/card_button_txt"
                    android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                app:cardBackgroundColor="@color/gray_card"
                app:cardCornerRadius="@dimen/card_corner_r"
                android:layout_marginBottom="@dimen/margin_bottom_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_card">

                    <ImageView
                        android:layout_width="@dimen/img_size_in_card"
                        android:layout_height="@dimen/img_size_in_card"
                        android:src="@drawable/billions"
                        android:background="@drawable/gradient_bg"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/movie_cover"/>

                    <TextView
                        android:id="@+id/card_movie3desc"
                        android:text="@string/movieName_Billions"
                        android:ellipsize="end"
                        android:layout_width="@dimen/width_movieName_in_card"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_bigBold"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/padding_movieName_card"
                        android:paddingEnd="@dimen/padding_card"
                        android:maxLines="3"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/card_movie3_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rectangle"
                        android:text="@string/card_button_txt"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                app:cardBackgroundColor="@color/gray_card"
                app:cardCornerRadius="@dimen/card_corner_r"
                android:layout_marginBottom="@dimen/margin_bottom_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_card">

                    <ImageView
                        android:layout_width="@dimen/img_size_in_card"
                        android:layout_height="@dimen/img_size_in_card"
                        android:src="@drawable/ic_baseline_local_movies_24"
                        android:background="@drawable/gradient_bg"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/movie_cover"/>

                    <TextView
                        android:layout_width="@dimen/width_movieName_in_card"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_bigBold"
                        android:text="@string/disclaimer"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/padding_movieName_card"
                        android:paddingEnd="@dimen/padding_card"
                        android:autoLink="web"
                        android:linksClickable="true"
                        android:textColorLink="@color/blue_mid"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                app:cardBackgroundColor="@color/gray_card"
                app:cardCornerRadius="@dimen/card_corner_r"
                android:layout_marginBottom="@dimen/margin_bottom_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_card">

                    <ImageView
                        android:layout_width="@dimen/img_size_in_card"
                        android:layout_height="@dimen/img_size_in_card"
                        android:src="@drawable/ic_baseline_local_movies_24"
                        android:background="@drawable/gradient_bg"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/movie_cover"/>

                    <TextView
                        android:layout_width="@dimen/width_movieName_in_card"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_bigBold"
                        android:text="@string/disclaimer"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/padding_movieName_card"
                        android:paddingEnd="@dimen/padding_card"
                        android:autoLink="web"
                        android:linksClickable="true"
                        android:textColorLink="@color/blue_mid"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                app:cardBackgroundColor="@color/gray_card"
                app:cardCornerRadius="@dimen/card_corner_r"
                android:layout_marginBottom="@dimen/margin_bottom_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_card">

                    <ImageView
                        android:layout_width="@dimen/img_size_in_card"
                        android:layout_height="@dimen/img_size_in_card"
                        android:src="@drawable/ic_baseline_local_movies_24"
                        android:background="@drawable/gradient_bg"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/movie_cover"/>

                    <TextView
                        android:layout_width="@dimen/width_movieName_in_card"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_bigBold"
                        android:text="@string/disclaimer"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/padding_movieName_card"
                        android:paddingEnd="@dimen/padding_card"
                        android:autoLink="web"
                        android:linksClickable="true"
                        android:textColorLink="@color/blue_mid"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                app:cardBackgroundColor="@color/gray_card"
                app:cardCornerRadius="@dimen/card_corner_r"
                android:layout_marginBottom="@dimen/margin_bottom_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_card">

                    <ImageView
                        android:layout_width="@dimen/img_size_in_card"
                        android:layout_height="@dimen/img_size_in_card"
                        android:src="@drawable/ic_baseline_local_movies_24"
                        android:background="@drawable/gradient_bg"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/movie_cover"/>

                    <TextView
                        android:layout_width="@dimen/width_movieName_in_card"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_bigBold"
                        android:text="@string/disclaimer"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/padding_movieName_card"
                        android:paddingEnd="@dimen/padding_card"
                        android:autoLink="web"
                        android:linksClickable="true"
                        android:textColorLink="@color/blue_mid"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottomPanel_x_marginB_ScrollV"
        android:orientation="horizontal"
        android:background="@color/gray_bg"
        android:paddingStart="@dimen/padding_bottomPanel"
        android:paddingEnd="@dimen/padding_bottomPanel"
        android:paddingBottom="@dimen/padding_bottomPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:cardCornerRadius="@dimen/card_corner_r"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/gray_menu">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_bg">

                <Button
                    android:id="@+id/bottomP_button_marked"
                    android:layout_width="@dimen/img_size_in_bottomPanel"
                    android:layout_height="@dimen/img_size_in_bottomPanel"
                    android:layout_gravity="center_vertical"
                    android:foreground="@drawable/ic_baseline_turned_in_24"
                    android:background="?selectableItemBackgroundBorderless"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:foregroundTint="@color/white_ic_transparent"
                    android:layout_marginStart="@dimen/margin_start_bottomP_buttons"
                    android:text="@string/bottomPanel_button_txt"
                    android:textColor="#00FFFFFF"/>

                <Button
                    android:id="@+id/bottomP_button_wLater"
                    android:layout_width="@dimen/img_size_in_bottomPanel"
                    android:layout_height="@dimen/img_size_in_bottomPanel"
                    android:layout_gravity="center_vertical"
                    android:foreground="@drawable/ic_baseline_watch_later_24"
                    android:background="?selectableItemBackgroundBorderless"
                    android:foregroundTint="@color/white_ic_transparent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginStart="@dimen/margin_start_bottomP_buttons"
                    android:text="@string/bottomPanel_button_txt"
                    android:textColor="#00FFFFFF"/>

                <Button
                    android:id="@+id/bottomP_button_fortune"
                    android:layout_width="@dimen/img_size_in_bottomPanel"
                    android:layout_height="@dimen/img_size_in_bottomPanel"
                    android:layout_gravity="center_vertical"
                    android:foreground="@drawable/ic_baseline_fortune_24"
                    android:background="?selectableItemBackgroundBorderless"
                    android:foregroundTint="@color/white_ic_transparent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginStart="@dimen/margin_start_bottomP_buttons"
                    android:text="@string/bottomPanel_button_txt"
                    android:textColor="#00FFFFFF"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>