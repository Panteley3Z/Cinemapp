<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_topPanel_x_marginT_ScrollV"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray_bg"
        android:padding="@dimen/padding_topPanel">

        <ImageView
            android:id="@+id/topPanel_profileImg"
            android:layout_width="@dimen/img_size_in_topPanel"
            android:layout_height="@dimen/img_size_in_topPanel"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_account_box_24"
            android:scaleType="centerCrop"
            android:contentDescription="@string/profile_img"/>

        <TextView
            android:id="@+id/top_profile_link"
            android:text="@string/profile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/height_topPanel_x_marginT_ScrollV"
        android:layout_marginBottom="@dimen/height_bottomPanel_x_marginB_ScrollV"
        android:background="@color/gray_bg"
        android:scrollbarSize="@dimen/padding_scrollContent">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_scrollContent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                android:background="@color/gray_card"
                android:padding="@dimen/padding_card"
                android:layout_marginBottom="@dimen/margin_bottom_card">

                <ImageView
                    android:id="@+id/movie_cover_brick"
                    android:layout_width="@dimen/img_size_in_card"
                    android:layout_height="@dimen/img_size_in_card"
                    android:src="@drawable/bbad"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/movie_cover"/>

                <TextView
                    android:id="@+id/card_description"
                    android:text="@string/movie_name"
                    android:ellipsize="end"
                    android:layout_width="@dimen/width_movieName_in_card"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size"
                    android:textStyle="bold"
                    android:layout_gravity="top"
                    android:paddingStart="@dimen/padding_card"
                    android:paddingEnd="@dimen/padding_card"
                    android:maxLines="5"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/button_watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/push_the_button"
                    android:text="@string/movie_brick_button"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                android:background="@color/gray_card"
                android:layout_marginBottom="@dimen/margin_bottom_card"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                android:background="@color/gray_card"
                android:layout_marginBottom="@dimen/margin_bottom_card"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                android:background="@color/gray_card"
                android:layout_marginBottom="@dimen/margin_bottom_card"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                app:cardBackgroundColor="@color/gray_menu"
                android:layout_marginBottom="@dimen/margin_bottom_card"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                android:background="@color/gray_card"
                android:layout_marginBottom="@dimen/margin_bottom_card"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card"
                android:background="@color/gray_card"
                android:layout_marginBottom="@dimen/margin_bottom_card"/>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottomPanel_x_marginB_ScrollV"
        android:background="@color/gray_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>